<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"

    android:padding="8dp">

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="پیشنهاد ویژه"
        android:textColor="@color/colorPrimary"
        android:textSize="12sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/view_1"
        android:layout_width="match_parent"
        android:layout_height="0.75dp"
        android:layout_below="@id/txt"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimary" />

    <ImageView
        android:id="@+id/item_popular_img_book"
        android:layout_width="135dp"
        android:layout_height="185dp"
        android:layout_below="@id/view_1"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/item_popular_txt_book_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/view_1"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@id/item_popular_img_book"
        android:textSize="12sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_popular_txt_book_name"
        android:layout_marginTop="24dp"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@id/item_popular_img_book"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shopping_cart" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:text="موجود در انبار"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/item_popular_txt_discount"
        style="@style/discountStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout"
        android:layout_marginStart="4dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:layout_toLeftOf="@id/item_popular_img_book"
        android:background="@drawable/bg_txt_discount"
        android:gravity="center"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:text="%30" />

    <TextView
        android:id="@+id/item_popular_txt_final_price"
        style="@style/finalPriceStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="4dp" />


    <TextView
        android:id="@+id/item_popular_txt_price"
        style="@style/priceStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_popular_txt_final_price"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="0.75dp"
        android:layout_below="@id/item_popular_img_book"
        android:layout_marginTop="8dp"
        android:background="@android:color/darker_gray" />

</RelativeLayout>