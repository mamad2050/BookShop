<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".Fragment.HomeFragment">

    <androidx.viewpager.widget.ViewPager
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/viewPager"/>


    <com.google.android.material.tabs.TabLayout
        app:tabIndicatorHeight="0dp"
        app:tabGravity="center"
        app:tabBackground="@drawable/bg_tabs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tabs"
        android:layout_below="@id/viewPager"
        android:layout_centerHorizontal="true"/>

    <androidx.recyclerview.widget.RecyclerView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tabs"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:id="@+id/recyclerView_category"/>

    <TextView
        android:id="@+id/txt_amazing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_fragment_offer_textView"
        android:textSize="12sp"
        android:layout_marginTop="12dp"
        android:layout_below="@id/recyclerView_category"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@id/txt_amazing"
        android:layout_marginTop="8dp"
        android:background="@color/design_default_color_primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/homeFragment_recyclerView_offers"/>


</RelativeLayout>