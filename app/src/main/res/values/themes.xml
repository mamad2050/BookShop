<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="BottomNavigationViewTextStyle">
        <item name="android:fontFamily">@font/iransans</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="toolbarTitleStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="titleStyle">
        <item name="android:fontFamily">@font/iransans_black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="discountStyle">

        <item name="fontFamily">@font/iranyekanextrabold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
<!--        <item name="maxLines">1</item>-->
        <item name="maxLines">1</item>
        <item name="android:textColor">@color/white</item>

    </style>


    <style name="priceStyle">

        <item name="fontFamily">@font/iransans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">13sp</item>
        <item name="android:gravity">center</item>
        <item name="maxLines">1</item>
    </style>




    <style name="buttonStyle">
        <item name="background">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/iransans_black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="editTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/iransans</item>
        <item name="android:textSize">13sp</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="hintTextAppearance">@style/titleStyle</item>
    </style>


    <style name="Theme.BookShop" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="fontFamily">@font/iransans</item>
        <!-- Customize your theme here. -->
    </style>


</resources>