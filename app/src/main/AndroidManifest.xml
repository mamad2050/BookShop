<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.bookshop">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".Activity.PublisherActivity"></activity>
        <activity android:name=".Activity.SearchActivity" />
        <activity android:name=".Activity.SendCommentActivity" />
        <activity android:name=".Activity.CommentActivity" />
        <activity android:name=".Activity.QuestionActivity" />
        <activity android:name=".Activity.IntroActivity" />
        <activity android:name=".Activity.SuccessfulRegisterActivity" />
        <activity android:name=".Activity.CompareBookActivity" />
        <activity android:name=".Activity.BookActivity" />
        <activity android:name=".Activity.DetailCategoryActivity" />
        <activity android:name=".Activity.LoginActivity" />
        <activity android:name=".Activity.RegisterActivity" />
        <activity android:name=".HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>